@{
    ViewData["Title"] = "Debug Page";
}

<div>
    <h1>Debug Page</h1>
    <div class="container">
  <div class="row">
    <div class="col">
        <form action="/Debug/TestFeedSync" target="_blank" method="get">
            <div class="mb-3">
                <label for="feedUri" class="form-label">Feed URL</label>
                <input type="text" class="form-control" id="feedUri" name="feedUri" aria-describedby="feedUriHelp">
                <div id="feedUriHelp" class="form-text">The URL of the feed to test</div>
            </div>
        </form>
    </div>
  </div>
</div>
</div>